#namespace("shop")
	#sql("search")
		SELECT * FROM t_shop AS s
		WHERE s.`NAME` LIKE '%#(keyword)%'
	#end
	#sql("getByType")
		SELECT s.* FROM 
		t_shop_type_relation AS str
		JOIN t_shop AS s ON str.SHOPID = s.ID
		WHERE str.TYPEID = ?
	#end
	#sql("inId")
	    SELECT * FROM t_shop WHERE ID IN (#(inParams))
	#end
	#sql("groupByDistant")
        SELECT s.*,((LONGITUDE-#(lng))*(LONGITUDE-#(lng))+ (LATITUDE-#(lat))* (LATITUDE-#(lat))) AS dst
        FROM t_shop AS s
        ORDER BY dst ASC
    #end
#end

#namespace("food")
	#sql("search")
		SELECT f.*,s.`NAME` AS SHOP_NAME,s.`RATE_AVG` FROM t_food AS f
		LEFT JOIN t_shop AS s ON f.SHOP_ID = s.ID
		WHERE f.`STATE` = '1' AND f.`NAME` LIKE '%#(keyword)%'
	#end
#end

